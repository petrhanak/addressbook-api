{
  "compilerOptions": {
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": "./src",
    "noEmit": true,
    "pretty": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "build/",
    "allowJs": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "rootDirs": [
      "node_modules",
      "src"
    ]
  },
  "include": [
    "src/**/*"
  ]
}
